
@{
    ViewBag.Title = "Start";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<head>
    <title>Personalize Company Profile</title>
    <link rel="stylesheet" type="text/css" href="" />
</head>

<body>
    <div>

        <div id=" startDiv" style="margin-top:35%;">
            <div id="startPagePictureDiv" style="margin-left: 50%; margin-top: 25%;">
                <h2 id="startText" style="margin-left:12%"></h2>
            </div>

            <div id="startPageTextDiv" style="width: 30%; float: left; margin-top: -30%; ">
                <img id="testbild" src="" alt="Smiley face">
            </div>
        </div>
        @section scripts{
            <script>

                $(document).ready(function () {

                    $.ajax({

                        url: "http://localhost:55579/api/VisualSettingsModels",
                        type: "Get",

                        success: function (data) {

                            for (var i = 0; i < data.length; i++) {
                                var picUrl = data[i].PictureUrl;
                                var startTextString = data[i].StartText;

                                document.getElementById('testbild').setAttribute('src', picUrl)
                                document.getElementById('startText').innerHTML = startTextString;
                            }
                        },

                        error: function (msg) { alert(msg + "startfel"); }
                    });
                });


            </script>

        }
        <div class="vit" style="position:absolute;top:0;left:0;width:100%;height:100%;background-color:white"></div>
    </div>
</body>